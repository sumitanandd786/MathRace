<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/five_dp"
        android:weightSum="1">

        <Button android:id="@+id/dashboard_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/deshboard_start_gradient"
            android:layout_marginRight="@dimen/five_dp"
            android:text="@string/start_btn_text"
            android:textColor="@color/white"
            />

        <Button android:id="@+id/dashboard_stop_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/TomatoRed"
            android:layout_marginLeft="@dimen/five_dp"
            android:textColor="@color/white"
            android:text="@string/stop_btn_txt"/>


        <Button android:id="@+id/dashboard_left_list_btn"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="wrap_content"
            android:text="<"
           android:layout_gravity="right"
            />

        <Button android:id="@+id/dashboard_right_list_btn"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text=">"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/five_dp"
        android:weightSum="1">
        <TextClock
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dashboard_clock_tc"
            android:background="@color/black"
            android:layout_margin="@dimen/five_dp"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:textSize="@dimen/twenty_sp"
            android:format12Hour="hh:mm:ss a"
            android:gravity="center_horizontal"
            android:textColor="@color/TomatoRed"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dashboard_stopwatch_tv"
            android:layout_margin="@dimen/five_dp"
            android:background="@color/black"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:text="@string/alaram_text"
            android:textColor="@color/white"
            android:gravity="center|center_vertical"
            android:textSize="@dimen/twenty_sp"/>


    </LinearLayout>




</LinearLayout>