<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five_dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/dashboard_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/five_dp"
            android:background="@color/deshboard_start_gradient"
            android:text="@string/start_btn_text"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/dashboard_stop_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five_dp"
            android:background="@color/TomatoRed"
            android:text="@string/stop_btn_txt"
            android:textColor="@color/white" />


        <ImageView
            android:id="@+id/dashboard_left_list_btn"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_previous" />

        <ImageView
            android:id="@+id/dashboard_right_list_btn"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            app:srcCompat="@drawable/ic_next" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five_dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextClock
            android:id="@+id/dashboard_clock_tc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:layout_weight="0.5"
            android:background="@color/black"
            android:format12Hour="hh:mm:ss a"
            android:gravity="center_horizontal"
            android:textColor="@color/TomatoRed"
            android:textSize="@dimen/twenty_sp"
            android:textStyle="bold"
            tools:targetApi="jelly_bean_mr1" />

        <TextView
            android:id="@+id/dashboard_stopwatch_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:layout_weight="0.5"
            android:background="@color/black"
            android:gravity="center|center_vertical"
            android:text="@string/alaram_text"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_sp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>