<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/ten_dp"
    android:visibility="visible">


    <LinearLayout
        android:id="@+id/ll_leave_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_marginEnd="@dimen/ten_dp"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/uploadRaceData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/twenty_dp"
            android:background="@drawable/button_selector_blue"
            android:text="Upload Race Data"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/adjustStartTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/twenty_dp"
            android:background="@drawable/button_selector_blue"
            android:text="Adjust Start Timer"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/onSpotRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/twenty_dp"
            android:background="@drawable/button_selector_blue"
            android:text="On Spot Registration"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/downloadData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_marginBottom="@dimen/twenty_dp"
            android:background="@drawable/button_selector_blue"
            android:text="Download Data"
            android:textColor="@color/white" />


    </LinearLayout>


</LinearLayout>