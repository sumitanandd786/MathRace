<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PermissionsDialogFragmentStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="DimDialogFragmentStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="CameraGalleryDialog" parent="@android:style/Theme.Dialog">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="NewDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogAnimationUpDown">
        <item name="android:windowEnterAnimation">@anim/anim_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_down</item>
    </style>

    <style name="DialogProgressText" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TransparentProgressDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="view_20">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/twenty_dp</item>
    </style>

    <style name="padding_left_right_small">
        <item name="android:paddingRight">@dimen/five_dp</item>
        <item name="android:paddingLeft">@dimen/five_dp</item>
    </style>

    <style name="LoginAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LoginAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />





    <style name="form_element_normal_edittext" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:importantForAutofill" tools:ignore="NewApi">noExcludeDescendants</item>
    </style>


</resources>
